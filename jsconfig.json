{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"jsx": "react-jsx",
		"checkJs": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@styles/*": ["src/styles/*"],
			"@components/*": ["src/components/*"],
			"@hooks/*": ["src/hooks/*"],
			"@config/*": ["src/config/*"]
		}
	},
	"exclude": ["node_modules", "build"]
}
